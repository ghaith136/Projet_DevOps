pipeline {
    agent any

    options {
        disableConcurrentBuilds()
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    triggers {
        pollSCM('H/5 * * * *')
    }

    environment {
        APP_NAME = "meteo-app-dev"
        DOCKER_IMAGE = "meteo-app:dev-${BUILD_NUMBER}"
        CONTAINER_NAME = "meteo-app-dev-${BUILD_NUMBER}"
        HOST_PORT = "3000"  // Port 3000
    }

    stages {
        stage('Start') {
            steps {
                echo "PIPELINE 2: Build complet sur push dev"
                bat "echo Build #${BUILD_NUMBER}"
            }
        }
        
        stage('Checkout') {
            steps {
                echo "Checkout branche dev"
                checkout scm
                bat 'dir'
            }
        }

        stage('Setup') {
            steps {
                bat 'npm install'
                bat 'echo Dependances installees'
            }
        }

        stage('Build') {
            steps {
                bat 'npm run build'
                bat 'echo Build termine'
            }
        }

        stage('Docker Build & Run') {
            steps {
                script {
                    bat """
                    docker stop ${CONTAINER_NAME} 2>nul || echo OK
                    docker rm ${CONTAINER_NAME} 2>nul || echo OK
                    
                    docker build --no-cache -t ${DOCKER_IMAGE} .
                    echo Image: ${DOCKER_IMAGE}
                    
                    docker run -d -p ${HOST_PORT}:3000 --name ${CONTAINER_NAME} ${DOCKER_IMAGE}
                    timeout /t 15 /nobreak
                    """
                }
            }
        }

        stage('Smoke Test') {
            steps {
                script {
                    bat """
                    set SUCCESS=0
                    
                    for /l %%i in (1,1,3) do (
                        if !SUCCESS! equ 0 (
                            powershell -Command "
                            try {
                                \$response = Invoke-WebRequest -Uri 'http://localhost:${HOST_PORT}' -UseBasicParsing -TimeoutSec 10
                                if (\$response.StatusCode -eq 200) {
                                    Write-Host 'Status 200'
                                    exit 0
                                } else {
                                    Write-Host 'Status ' \$response.StatusCode
                                    exit 1
                                }
                            } catch {
                                Write-Host 'Erreur connexion'
                                exit 1
                            }
                            "
                            
                            if !errorlevel! equ 0 (
                                set SUCCESS=1
                                echo Test reussi
                            ) else (
                                if %%i lss 3 (
                                    timeout /t 5 /nobreak
                                )
                            )
                        )
                    )
                    
                    if !SUCCESS! equ 0 (
                        echo Tests echoues
                        docker logs ${CONTAINER_NAME}
                        exit 1
                    )
                    """
                }
            }
        }

        stage('Archive') {
            steps {
                bat """
                echo # Build #${BUILD_NUMBER} > build_report.md
                echo Image: ${DOCKER_IMAGE} >> build_report.md
                echo Port: ${HOST_PORT} >> build_report.md
                echo Date: %DATE% %TIME% >> build_report.md
                docker logs ${CONTAINER_NAME} > logs.txt 2>nul || echo Pas de logs > logs.txt
                """
                archiveArtifacts artifacts: 'build_report.md, logs.txt', fingerprint: true
            }
        }

        stage('Cleanup') {
            steps {
                bat """
                docker stop ${CONTAINER_NAME} 2>nul || echo OK
                docker rm ${CONTAINER_NAME} 2>nul || echo OK
                """
            }
        }
        
        stage('End') {
            steps {
                bat 'echo PIPELINE 2 TERMINE'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        
        success {
            echo "PIPELINE 2 - SUCCESS"
            
            script {
                parallel(
                    'Node 18 Check': {
                        bat 'node --version'
                        bat 'echo Node 18 OK'
                    },
                    'Node 20 Check': {
                        bat 'echo Simulation Node 20'
                        bat 'echo Node 20 OK'
                    }
                )
            }
        }
        
        failure {
            echo "PIPELINE 2 - FAILED"
        }
    }
}
